{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "tools": {
    "write": true,
    "bash": true,
    "webfetch": true
  },
  "permission": {
    "bash": {
      "*": "deny",
      "ls*": "allow",
      "grep*": "allow",
      "cat*": "allow",
      "pwd*": "allow",
      "rg*": "allow",
      "plutil*": "allow",
      "npm*": "allow",
      "flutter*": "allow",
      "dart*": "allow",
      "pod*": "allow",
      "xcodebuild*": "allow",
      "mkdir*": "ask",
      "touch*": "ask",
      "cp*": "ask",
      "mv*": "ask",
      "rm*": "ask",
      "chmod*": "ask",
      "chown*": "ask",
      "rsync*": "ask",
      "git*": "ask",
      "curl*": "deny",
      "wget*": "deny",
      "ssh*": "deny",
      "scp*": "deny",
      "sudo*": "deny"
    }
  }
}
